<%- model_class = Owner -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:business_id) %>:</strong></dt>
  <dd><%= @owner.business_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @owner.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:paypal_handle) %>:</strong></dt>
  <dd><%= @owner.paypal_handle %></dd>
  <dt><strong><%= model_class.human_attribute_name(:personal_message) %>:</strong></dt>
  <dd><%= @owner.personal_message %></dd>
  <dt><strong><%= model_class.human_attribute_name(:personal_image_link) %>:</strong></dt>
  <dd><%= @owner.personal_image_link %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              owners_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_owner_path(@owner), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              owner_path(@owner),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
