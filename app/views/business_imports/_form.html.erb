<%= form_for @business_import, :html => { :class => "form-horizontal business_import" } do |f| %>

  <% if @business_import.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@business_import.errors.count, "error") %> prohibited this business_import from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @business_import.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :content, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :content, :class => 'form-control' %>
    </div>
    <%=f.error_span(:content) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                business_imports_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
